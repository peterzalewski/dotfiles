[user]
  name = Peter Zalewski
[include]
  path = .gitconfig.local
[core]
  autocorrect = 1
  autocrlf = input
  pager = less -r
  safecrlf = true
[alias]
  br = branch
  ci = commit
  co = checkout
  cx = config --edit --local
  d = diff --color-words
  dump = cat-file -p
  hidden = !git ls-files -v | awk '$1 ~ /^[[:lower:]]/ { print $2 }'
  hide = update-index --assume-unchanged
  hist = log --pretty=format:'%C(auto) %h %ad | %s%d [%an]' --graph --date=short
  root = rev-parse --show-toplevel
  praise = blame
  st = status -s -uall
  type = cat-file -t
  unhide = update-index --no-assume-unchanged
  whoami = !git var GIT_AUTHOR_IDENT | cut -d' ' -f -3
  gone = !git branch -vv | awk '/: gone]/ { print $1 }' | xargs git branch -D
  undo = reset HEAD~1 --mixed
  whoopsie = commit --amend --no-edit
[color]
  ui = true
[push]
  default = simple
  autoSetupRemote = true
[merge]
  conflictstyle = zdiff3
[rerere]
  enabled = true
[diff]
  algorithm = patience
  colorMoved = default
  renames = copies
  external = difft
[http]
  postBuffer = 524288000
[protocol]
  version = 2
[init]
  defaultBranch = main
[commit]
  verbose = true
[column]
  ui = auto
[branch]
  sort = -committerdate
[tag]
  sort = version:refname
[fetch]
  prune = true
  pruneTags = true
  all = true
# vim: ft=gitconfig:sw=2:ts=2:et
