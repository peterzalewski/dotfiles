[user]
  name = Peter Zalewski
  email = peter@zalewski.com
[core]
  autocrlf = input
  safecrlf = true
  autocorrect = 1
  pager = less -r
[alias]
  co = checkout
  ci = commit
  st = status -sb
  br = branch
  hist = log --pretty=format:\"%C(auto) %h %ad | %s%d [%an]\" --graph --date=short
  type = cat-file -t
  dump = cat-file -p
  d = diff --color-words
  praise = blame
  hide = update-index --assume-unchanged
  hidden = !git ls-files -v | awk '$1 ~ \"^[[:lower:]]\" { print $2 }'
  unhide = update-index --no-assume-unchanged
  whoopsie = commit --amend --no-edit
[color]
  ui = true
[push]
  default = simple
